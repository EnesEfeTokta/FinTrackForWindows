<UserControl x:Class="FinTrackForWindows.Views.AppSettingsContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:FinTrackForWindows.ViewModels"
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <helpers:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
    </UserControl.Resources>

    <Border Style="{StaticResource DashboardCardStyle}">
        <StackPanel>
            <TextBlock Text="Application Settings" Style="{StaticResource CardTitleTextStyle}"/>
            <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" 
                    Margin="0,5,0,20" Opacity="0.5"/>

            <TextBlock Text="{helpers:Translate Apperance}" Style="{StaticResource LabelTextStyle}"/>
            <ComboBox Style="{StaticResource ModernComboBoxStyle}" Margin="0,5,0,20"
                      ItemsSource="{Binding AppearanceTypes}" SelectedItem="{Binding SelectedAppearanceType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="{helpers:Translate Currency}" Style="{StaticResource LabelTextStyle}"/>
            <ComboBox Style="{StaticResource ModernComboBoxStyle}" Margin="0,5,0,20"
                      ItemsSource="{Binding CurrencyTypes}" SelectedItem="{Binding SelectedCurrencyType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBlock Text="{helpers:Translate Language}" Style="{StaticResource LabelTextStyle}"/>
            <ComboBox Style="{StaticResource ModernComboBoxStyle}" Margin="0,5,0,20"
                      ItemsSource="{Binding LanguageTypes}" SelectedItem="{Binding SelectedLanguageType}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- 
            <TextBlock Text="GENERAL" Style="{StaticResource LabelTextStyle}" Margin="0,10,0,5"/>
            <CheckBox Content="Start FinTrack when the computer starts up" 
                      IsChecked="{Binding StartWithWindows}" 
                      Style="{StaticResource ModernCheckBoxStyle}" Margin="0,5"/>
            -->

            <Button Content="{helpers:Translate Save}" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="0,35,0,0"
                    HorizontalAlignment="Stretch"
                    Command="{Binding SaveChangesCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
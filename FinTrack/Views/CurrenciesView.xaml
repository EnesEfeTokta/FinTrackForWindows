<UserControl x:Class="FinTrackForWindows.Views.CurrenciesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vm="clr-namespace:FinTrackForWindows.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400"
             x:Name="currenciesViewRoot"
             d:DataContext="{d:DesignInstance Type=vm:CurrenciesViewModel, IsDesignTimeCreatable=True}"
             Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <helpers:BrushToLvcPaintConverter x:Key="BrushToLvcPaintConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <helpers:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
        <helpers:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter" />

        <Style x:Key="PeriodButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TopBarTextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,12,12,12"/>
            <Setter Property="Margin" Value="10,10,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardDarkerBackgroundBrush}"/>
                </Trigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource EqualityToBooleanConverter}">
                            <Binding Path="CommandParameter" RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="DataContext.SelectedPeriod" ElementName="currenciesViewRoot"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="{StaticResource AccentBlueBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" Margin="0,0,20,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="All Rates" Style="{StaticResource CardTitleTextStyle}"/>
                <Border DockPanel.Dock="Top" BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" Margin="0,5,0,15" Opacity="0.5"/>
                <TextBox DockPanel.Dock="Top" Text="{Binding CurrencySearch, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,15"/>

                <ListView ItemsSource="{Binding FilteredCurrencies}"
                          SelectedItem="{Binding SelectedCurrency, Mode=TwoWay}"
                          Background="Transparent" 
                          BorderThickness="0" 
                          ItemContainerStyle="{StaticResource CleanListViewItemStyle}"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          ScrollViewer.CanContentScroll="True">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,8">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding ToCurrencyFlag}" Width="40" Height="25" Stretch="Fill" VerticalAlignment="Center"/>
                                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ToCurrencyCode}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ToCurrencyName}" Foreground="{StaticResource TopBarTextSecondaryBrush}" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" TextBlock.TextAlignment="Right">
                                        <TextBlock Text="{Binding ToCurrencyPrice, StringFormat='N4'}" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ToCurrencyChange}" 
                                                   Foreground="{Binding ToCurrencyChangeForeground}" 
                                                   FontSize="12"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20,0,0,0" ClipToBounds="True">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsCurrencySelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Style="{StaticResource DashboardCardStyle}" DataContext="{Binding SelectedCurrency}">
                    <StackPanel>
                        <Grid Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="https://currencyfreaks.com/photos/flags/usd.png" Width="50" Height="35" Stretch="Fill"/>
                                <StackPanel Margin="15,0,0,0">
                                    <TextBlock Style="{StaticResource CardTitleTextStyle}" FontSize="24">
                                        <Run Text="USD" FontWeight="Bold" Foreground="White"/>
                                        <Run Text=" / " FontWeight="SemiBold" Foreground="{StaticResource TopBarTextSecondaryBrush}"/>
                                        <Run Text="{Binding ToCurrencyCode}" FontWeight="Bold" Foreground="White"/>
                                    </TextBlock>
                                    <TextBlock Foreground="{StaticResource TopBarTextSecondaryBrush}">
                                        <Run Text="{Binding ToCurrencyName}"/> Equivalent
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Run Text="{Binding ToCurrencyPrice, StringFormat='N4'}" FontSize="42" FontWeight="Bold" Foreground="White"/>
                                <Run Text="{Binding ToCurrencyCode}" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TopBarTextSecondaryBrush}"/>
                            </TextBlock>
                        </Grid>
                        <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,15" Opacity="0.5"/>

                        <Grid>
                            <TextBlock Text="Period" Style="{StaticResource LabelTextStyle}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,15">
                                <Button Content="1D" Style="{StaticResource PeriodButtonStyle}" Command="{Binding DataContext.ChangePeriodCommand, ElementName=currenciesViewRoot}" CommandParameter="1D"/>
                                <Button Content="1W" Style="{StaticResource PeriodButtonStyle}" Command="{Binding DataContext.ChangePeriodCommand, ElementName=currenciesViewRoot}" CommandParameter="1W"/>
                                <Button Content="1M" Style="{StaticResource PeriodButtonStyle}" Command="{Binding DataContext.ChangePeriodCommand, ElementName=currenciesViewRoot}" CommandParameter="1M"/>
                                <Button Content="1Y" Style="{StaticResource PeriodButtonStyle}" Command="{Binding DataContext.ChangePeriodCommand, ElementName=currenciesViewRoot}" CommandParameter="1Y"/>
                            </StackPanel>
                        </Grid>

                        <Border Height="350" Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10">
                            <lvc:CartesianChart
                                Height="320"
                                Series="{Binding DataContext.Series, ElementName=currenciesViewRoot}"
                                XAxes="{Binding DataContext.XAxes, ElementName=currenciesViewRoot}"
                                YAxes="{Binding DataContext.YAxes, ElementName=currenciesViewRoot}"
                                Title="{Binding DataContext.Title, ElementName=currenciesViewRoot}"
                                LegendPosition="Bottom"
                                LegendTextPaint="{Binding Source={StaticResource TopBarTextSecondaryBrush}, Converter={StaticResource BrushToLvcPaintConverter}}"
                                TooltipPosition="Top"
                                TooltipBackgroundPaint="{Binding Source={StaticResource CardDarkerBackgroundBrush}, Converter={StaticResource BrushToLvcPaintConverter}}"
                                TooltipTextPaint="{Binding Source={StaticResource TopBarTextSecondaryBrush}, Converter={StaticResource BrushToLvcPaintConverter}}">
                            </lvc:CartesianChart>
                        </Border>

                        <UniformGrid Columns="2" Margin="0,25,0,0">
                            <StackPanel>
                                <TextBlock Text="DAILY LOW" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DailyLow}" FontSize="18" Foreground="White"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="DAILY HIGH" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DailyHigh}" FontSize="18" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="DAILY CHANGE" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DailyChange}" FontSize="18" Foreground="{Binding DailyChangeForeground}"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="WEEKLY CHANGE" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding WeeklyChange}" FontSize="18" Foreground="{Binding WeeklyChangeForeground}"/>
                            </StackPanel>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="MONTHLY CHANGE" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding MonthlyChange}" FontSize="18" Foreground="{Binding MonthlyChangeForeground}"/>
                            </StackPanel>
                        </UniformGrid>

                        <TextBlock Text="Period Analysis" Style="{StaticResource CardTitleTextStyle}" FontSize="16" Margin="0,30,0,15"/>
                        <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,20" Opacity="0.5"/>

                        <UniformGrid Columns="3" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="PERIOD HIGH" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DataContext.PeriodHighText, ElementName=currenciesViewRoot}" FontSize="18" Foreground="White"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="PERIOD LOW" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DataContext.PeriodLowText, ElementName=currenciesViewRoot}" FontSize="18" Foreground="White"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="AVERAGE RATE" Style="{StaticResource LabelTextStyle}"/>
                                <TextBlock Text="{Binding DataContext.AverageRateText, ElementName=currenciesViewRoot}" FontSize="18" Foreground="White"/>
                            </StackPanel>
                        </UniformGrid>

                        <UniformGrid Columns="2" Margin="0,10,0,0">
                            <Border Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Current Position in Period" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <lvc:PieChart
                                        Height="180"
                                        Series="{Binding DataContext.GaugeSeries, ElementName=currenciesViewRoot}"
                                        VisualElements="{Binding DataContext.GaugeVisuals, ElementName=currenciesViewRoot}"
                                        InitialRotation="-135"
                                        MinValue="{Binding DataContext.PeriodLowValue, ElementName=currenciesViewRoot}"
                                        MaxValue="{Binding DataContext.PeriodHighValue, ElementName=currenciesViewRoot}">
                                    </lvc:PieChart>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="10,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Daily Trend Distribution" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <lvc:PieChart
                                        Height="180"
                                        Series="{Binding DataContext.PieSeries, ElementName=currenciesViewRoot}"
                                        LegendPosition="Bottom"
                                        LegendTextPaint="{Binding Source={StaticResource TopBarTextSecondaryBrush}, Converter={StaticResource BrushToLvcPaintConverter}}"
                                        TooltipPosition="Bottom"
                                        TooltipTextPaint="{Binding Source={StaticResource TopBarTextSecondaryBrush}, Converter={StaticResource BrushToLvcPaintConverter}}">
                                    </lvc:PieChart>
                                </StackPanel>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <Border Background="#991E222D" CornerRadius="12"
                    Visibility="{Binding IsLoadingDetails, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="80" Height="80" Style="{StaticResource MaterialDesignCircularProgressBar}"/>
                    <TextBlock Text="Loading Details..." Foreground="White" Margin="0,15,0,0" FontSize="16"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource DashboardCardStyle}"
                    Visibility="{Binding IsCurrencySelected, Converter={StaticResource InvertedBooleanToVisibilityConverter}}">
                <TextBlock Text="Please select a currency from the list to see details." 
                           Foreground="{StaticResource TopBarTextSecondaryBrush}" 
                           FontSize="18"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
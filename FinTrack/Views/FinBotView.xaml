<UserControl x:Class="FinTrackForWindows.Views.FinBotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:FinTrackForWindows.ViewModels"
             xmlns:models="clr-namespace:FinTrackForWindows.Models.FinBot"
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:FinBotViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="50">
        <Border Style="{StaticResource DashboardCardStyle}" Padding="0">
            <DockPanel>
                <Border DockPanel.Dock="Top" Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="20,20,0,0" Padding="20">
                    <StackPanel Orientation="Horizontal">
                        <Border Background="{StaticResource DebtAccentGradientBrush}" CornerRadius="20" Width="40" Height="40">
                            <Image Source="/Assets/Images/chatbot.png" Width="22" Height="22"/>
                        </Border>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="FinBot" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Foreground="{StaticResource StatusGreenBrush}">
                                <Ellipse Fill="{StaticResource StatusGreenBrush}" Width="8" Height="8" Margin="0,0,5,0"/>
                                Çevrimiçi
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border DockPanel.Dock="Bottom" Padding="15" BorderBrush="{StaticResource ProgressBarBackgroundBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding MessageInput, UpdateSourceTrigger=PropertyChanged}"
                                 Grid.Column="0" Style="{StaticResource ModernTextBoxStyle}" Tag="Write a message..." 
                                 VerticalContentAlignment="Center" FontSize="14" BorderThickness="2" BorderBrush="{StaticResource TopBarAccentBrush}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>
                        <Button Grid.Column="1" Style="{StaticResource AccentButtonStyle}" Width="45" Height="45" Margin="10,0,0,0"
                                Command="{Binding SendMessageCommand}">
                            <Image Source="/Assets/Images/Icons/send-message.png" Width="22" Height="22"/>
                        </Button>
                    </Grid>
                </Border>

                <ScrollViewer x:Name="ChatScrollViewer" 
                              VerticalScrollBarVisibility="Auto"
                              helpers:AutoScrollBehavior.AutoScroll="True">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding Messages}" HorizontalContentAlignment="Stretch">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:ChatMessageModel}">
                                    <Border MaxWidth="500" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="Background" Value="{StaticResource BotMessageBackgroundBrush}"/>
                                                <Setter Property="CornerRadius" Value="15,15,15,5"/>
                                                <Setter Property="Padding" Value="15"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSentByCurrentUser}" Value="True">
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter Property="Background" Value="{StaticResource UserMessageBackgroundBrush}"/>
                                                        <Setter Property="CornerRadius" Value="15,15,5,15"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Foreground="White"/>

                                            <ItemsControl ItemsSource="{Binding QuickActions}" Margin="0,10,0,0">
                                                <ItemsControl.Style>
                                                    <Style TargetType="ItemsControl">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Items.Count}" Value="0">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsSentByCurrentUser}" Value="False">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ItemsControl.Style>
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Button Content="{Binding}" 
                                                                Command="{Binding DataContext.SendQuickActionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource ChatQuickActionButtonStyle}"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border MaxWidth="500" Margin="5" HorizontalAlignment="Left"
                                Background="{StaticResource BotMessageBackgroundBrush}"
                                CornerRadius="15,15,15,5" Padding="20,15"
                                Visibility="{Binding IsAwaitingBotResponse, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="dot1" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="0" To="-5" AutoReverse="True" Duration="0:0:0.3" RepeatBehavior="Forever" BeginTime="0:0:0.0"/>
                                                <DoubleAnimation Storyboard.TargetName="dot2" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="0" To="-5" AutoReverse="True" Duration="0:0:0.3" RepeatBehavior="Forever" BeginTime="0:0:0.1"/>
                                                <DoubleAnimation Storyboard.TargetName="dot3" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" From="0" To="-5" AutoReverse="True" Duration="0:0:0.3" RepeatBehavior="Forever" BeginTime="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </StackPanel.Triggers>

                                <Ellipse x:Name="dot1" Fill="White" Width="8" Height="8">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse x:Name="dot2" Fill="White" Width="8" Height="8" Margin="5,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Ellipse x:Name="dot3" Fill="White" Width="8" Height="8" Margin="5,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
<Window x:Class="FinTrackForWindows.Views.OtpInputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter OTP" Height="200" Width="350"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <StackPanel Margin="20">
        <TextBlock x:Name="InfoTextBlock" TextWrapping="Wrap" Margin="0,0,0,10"
                   Text="An OTP code has been sent to your current email address. Please enter the new email and the OTP code below to confirm the change."/>
        <TextBox x:Name="OtpTextBox" Margin="0,5,0,15"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Confirm" Width="80" Margin="0,0,10,0" IsDefault="True" Click="ConfirmButton_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>

<UserControl x:Class="FinTrackForWindows.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinTrackForWindows.ViewModels"
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1500"
             d:DataContext="{d:DesignInstance Type=local:TransactionsViewModel, IsDesignTimeCreatable=True}"
             Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <helpers:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
        <helpers:BrushToLvcPaintConverter x:Key="BrushToLvcPaintConverter"/>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <DockPanel Margin="0,0,20,0">
                <UniformGrid DockPanel.Dock="Top" Columns="3" Margin="0,0,0,20">
                    <Border Style="{StaticResource DashboardCardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Income vs. Expense Ratio" 
                                       Style="{StaticResource LabelTextStyle}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <lvc:PieChart Series="{Binding IncomeVsExpenseSeries, Mode=OneWay}" 
                                          LegendPosition="Bottom"
                                          Height="280"
                                          AnimationsSpeed="00:00:01"
                                          LegendTextSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Income Distribution" 
                                       Style="{StaticResource LabelTextStyle}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <lvc:PieChart Series="{Binding IncomeByCategorySeries, Mode=OneWay}" 
                                          LegendPosition="Bottom"
                                          Height="280"
                                          AnimationsSpeed="00:00:01"
                                          LegendTextSize="10"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource DashboardCardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Expense Distribution" 
                                       Style="{StaticResource LabelTextStyle}" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <lvc:PieChart Series="{Binding ExpenseByCategorySeries, Mode=OneWay}" 
                                          LegendPosition="Bottom"
                                          Height="280"
                                          AnimationsSpeed="00:00:01"
                                          LegendTextSize="10"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>

                <Border Style="{StaticResource DashboardCardStyle}">
                    <DockPanel>
                        <Border DockPanel.Dock="Top" Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="SEARCH BY DESCRIPTION" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding FilterByDescription, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                                    <TextBlock Text="TRANSACTION TYPE" Style="{StaticResource LabelTextStyle}"/>
                                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" ItemsSource="{Binding TransactionTypeFilterOptions}" SelectedItem="{Binding FilterByTransactionType}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,10,10">
                                    <TextBlock Text="CATEGORY" Style="{StaticResource LabelTextStyle}"/>
                                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" ItemsSource="{Binding CategoriesForFilter}" SelectedItem="{Binding FilterByCategory}" DisplayMemberPath="Name"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="START DATE" Style="{StaticResource LabelTextStyle}"/>
                                    <DatePicker Style="{StaticResource ModernDatePickerStyle}" SelectedDate="{Binding FilterByStartDate}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,10,10">
                                    <TextBlock Text="END DATE" Style="{StaticResource LabelTextStyle}"/>
                                    <DatePicker Style="{StaticResource ModernDatePickerStyle}" SelectedDate="{Binding FilterByEndDate}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="MIN. AMOUNT" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding FilterByMinAmount, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,10,0">
                                    <TextBlock Text="MAX. AMOUNT" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding FilterByMaxAmount, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <Button Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Content="Clear Filters" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding ResetFiltersCommand}" VerticalAlignment="Center" Height="40"/>
                            </Grid>
                        </Border>

                        <TextBlock DockPanel.Dock="Top" Text="Transactions" Style="{StaticResource CardTitleTextStyle}" Margin="0,0,0,5"/>
                        <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" DockPanel.Dock="Top" BorderThickness="0,0,0,1" Margin="0,0,0,15" Opacity="0.5"/>

                        <ListView ItemsSource="{Binding FilteredTransactions}"
                                  SelectedItem="{Binding SelectedTransaction, Mode=TwoWay}"
                                  Background="Transparent" BorderThickness="0" 
                                  ItemContainerStyle="{StaticResource CleanListViewItemStyle}"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" Background="{Binding IconBackground}" CornerRadius="20" Width="40" Height="40">
                                                <Image Source="/Assets/Images/Icons/money.png" Width="20" Height="20"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                                                <TextBlock Text="{Binding NameOrDescription}" Foreground="White" FontSize="15" FontWeight="SemiBold"/>
                                                <TextBlock Foreground="{StaticResource TopBarTextSecondaryBrush}" FontSize="12">
                                                    <Run Text="{Binding Date, StringFormat='dd MMMM yyyy'}"/><Run Text=" - "/><Run Text="{Binding AccountName}"/>
                                                </TextBlock>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat='C'}" Foreground="{Binding AmountForegroundColor}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                                                <Button Style="{StaticResource IconOnlyButtonStyle}" ToolTip="Edit" Command="{Binding DataContext.PrepareToEditTransactionCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}">
                                                    <Image Source="/Assets/Images/Icons/edit.png" Width="16" Height="16"/>
                                                </Button>
                                                <Button Style="{StaticResource IconOnlyButtonStyle}" ToolTip="Delete" Margin="5,0,0,0" Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding}">
                                                    <Image Source="/Assets/Images/Icons/delete.png" Width="16" Height="16"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </Border>
            </DockPanel>
        </ScrollViewer>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Style="{StaticResource DashboardCardStyle}" Margin="20,0,0,0">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="{Binding FormTitle}" Style="{StaticResource CardTitleTextStyle}"/>
                        <Button Command="{Binding NewTransactionCommand}" Style="{StaticResource IconOnlyButtonStyle}" ToolTip="New Transaction" HorizontalAlignment="Right">
                            <Image Source="/Assets/Images/Icons/add.png" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                    <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" Margin="0,5,0,20" Opacity="0.5"/>
                    <TextBlock Text="TRANSACTION DESCRIPTION" Style="{StaticResource LabelTextStyle}"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding EditableTransaction.NameOrDescription, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                    <TextBlock Text="AMOUNT" Style="{StaticResource LabelTextStyle}"/>
                    <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding EditableTransaction.Amount, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                    <TextBlock Text="ACCOUNT" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox ItemsSource="{Binding AllAccounts}" SelectedItem="{Binding SelectedAccountForForm, Mode=TwoWay}" DisplayMemberPath="Name" Style="{StaticResource ModernComboBoxStyle}" VerticalContentAlignment="Center" Padding="10,0,0,0" Margin="0,0,0,15"/>
                    <TextBlock Text="CURRENCY" Style="{StaticResource LabelTextStyle}"/>
                    <ComboBox Style="{StaticResource ModernComboBoxStyle}" ItemsSource="{Binding CurrencyTypes}" SelectedItem="{Binding EditableTransaction.Currency, Mode=TwoWay}" Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBlock Text="CATEGORY" Style="{StaticResource LabelTextStyle}"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" ItemsSource="{Binding AllCategories}" SelectedItem="{Binding SelectedCategoryForForm, Mode=TwoWay}" DisplayMemberPath="Name" Style="{StaticResource ModernComboBoxStyle}" VerticalContentAlignment="Center" Padding="10,0,0,0" Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Command="{Binding AddNewCategoryCommand}" Style="{StaticResource IconOnlyButtonStyle}" ToolTip="Add New Category" VerticalAlignment="Center">
                            <Image Source="/Assets/Images/Icons/add.png" Width="16" Height="16"/>
                        </Button>
                    </Grid>
                    <TextBlock Text="DATE" Style="{StaticResource LabelTextStyle}"/>
                    <DatePicker Style="{StaticResource ModernDatePickerStyle}" SelectedDate="{Binding EditableTransaction.Date, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20"/>
                    <Button Content="{Binding SaveButtonText}" Command="{Binding SaveTransactionCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
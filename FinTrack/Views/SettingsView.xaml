<UserControl x:Class="FinTrackForWindows.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinTrackForWindows.Views"
             xmlns:vm="clr-namespace:FinTrackForWindows.ViewModels"
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1400"
             Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InequalityToBooleanConverter x:Key="InequalityToBooleanConverter"/>
        <helpers:EqualityToBooleanConverter x:Key="EqualityToBooleanConverter"/>

        <DataTemplate DataType="{x:Type vm:ProfileSettingsContentViewModel}">
            <local:ProfileSettingsContentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SecuritySettingsContentViewModel}">
            <local:SecuritySettingsContentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NotificationSettingsContentViewModel}">
            <local:NotificationSettingsContentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AppSettingsContentViewModel}">
            <local:AppSettingsContentView/>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="30">
        <StackPanel>
            <Border Style="{StaticResource DashboardCardStyle}">
                <StackPanel>
                    <TextBlock Text="Üyelik Planınız" Style="{StaticResource CardTitleTextStyle}"/>
                    <Border BorderBrush="{StaticResource TopBarTextSecondaryBrush}" BorderThickness="0,0,0,1" Margin="0,5,0,20" Opacity="0.5"/>

                    <ItemsControl ItemsSource="{Binding MembershipStore.AvailablePlans}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource MembershipCardStyle}" Margin="10">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryAccentBrush}"/>

                                        <TextBlock Margin="0,5,0,15" Foreground="{StaticResource TextBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Price}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{Binding Price, StringFormat={}{0:C}, ConverterCulture=en-US}" />
                                            <Run Text="/" />
                                            <Run Text="{Binding BillingCycle}" />
                                        </TextBlock>

                                        <TextBlock Text="Ücretsiz" FontSize="14" Margin="0,5,0,15" Foreground="{StaticResource TextBrush}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Price}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Margin="0,2" Foreground="{StaticResource TextBrush}">
                                            <Run Text="✓"/>
                                            <Run Text="{Binding Accounts.MaxBankAccounts, FallbackValue=0, TargetNullValue='Sınırsız'}" />
                                            <Run Text=" Hesap" />
                                        </TextBlock>

                                        <TextBlock Margin="0,2" Foreground="{StaticResource TextBrush}">
                                            <Run Text="✓"/>
                                            <Run Text="{Binding Budgeting.MaxBudgets, FallbackValue=0, TargetNullValue='Sınırsız'}" />
                                            <Run Text=" Bütçe" />
                                        </TextBlock>

                                        <TextBlock Margin="0,2" Foreground="{StaticResource TextBrush}" Text="✓ Gelişmiş Raporlama" Visibility="{Binding Reporting.CanExportPdf, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <TextBlock Margin="0,2" Foreground="{StaticResource TextBrush}" Text="✓ Öncelikli Destek" Visibility="{Binding PrioritySupport, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                        <Button Command="{Binding DataContext.SelectPlanCommand, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,25,0,0">
                                            <Button.Content>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Yükselt"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Value="True">
                                                                    <DataTrigger.Binding>
                                                                        <MultiBinding Converter="{StaticResource EqualityToBooleanConverter}">
                                                                            <Binding Path="DataContext.MembershipStore.CurrentUserMembership.PlanId" RelativeSource="{RelativeSource AncestorType={x:Type ItemsControl}}"/>
                                                                            <Binding Path="Id"/>
                                                                        </MultiBinding>
                                                                    </DataTrigger.Binding>
                                                                    <Setter Property="Text" Value="Mevcut Plan"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Button.Content>
                                            <Button.IsEnabled>
                                                <MultiBinding Converter="{StaticResource InequalityToBooleanConverter}">
                                                    <Binding Path="DataContext.MembershipStore.CurrentUserMembership.PlanId" RelativeSource="{RelativeSource AncestorType={x:Type ItemsControl}}"/>
                                                    <Binding Path="Id"/>
                                                </MultiBinding>
                                            </Button.IsEnabled>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" Margin="0,0,20,0">
                    <StackPanel>
                        <RadioButton Content="Profil Ayarları" GroupName="Settings" IsChecked="True" 
                                     Style="{StaticResource SettingsMenuButtonStyle}"
                                     Command="{Binding ChangePageCommand}" 
                                     CommandParameter="Profile"/>
                        <RadioButton Content="Güvenlik" GroupName="Settings" 
                                     Style="{StaticResource SettingsMenuButtonStyle}"
                                     Command="{Binding ChangePageCommand}" 
                                     CommandParameter="Security"/>
                        <RadioButton Content="Bildirimler" GroupName="Settings" 
                                     Style="{StaticResource SettingsMenuButtonStyle}"
                                     Command="{Binding ChangePageCommand}" 
                                     CommandParameter="Notifications"/>
                        <RadioButton Content="Uygulama" GroupName="Settings" 
                                     Style="{StaticResource SettingsMenuButtonStyle}"
                                     Command="{Binding ChangePageCommand}" 
                                     CommandParameter="App"/>
                    </StackPanel>
                </Border>

                <ContentControl Grid.Column="1" 
                                Margin="20,0,0,0"
                                Content="{Binding CurrentPageViewModel}"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
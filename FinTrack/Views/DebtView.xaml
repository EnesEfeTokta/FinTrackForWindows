<UserControl x:Class="FinTrackForWindows.Views.DebtView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:FinTrackForWindows.ViewModels"
             xmlns:models="clr-namespace:FinTrackForWindows.Models.Debt"
             xmlns:helpers="clr-namespace:FinTrackForWindows.Helpers"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewModels:DebtViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="850" d:DesignWidth="1600"
             Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter"/>
        <helpers:ObjectArrayConverter x:Key="ObjectArrayConverter"/>
        <helpers:VideoStatusConverter x:Key="VideoStatusConverter"/>
        <sys:Boolean x:Key="TrueBoolean">True</sys:Boolean>
        <sys:Boolean x:Key="FalseBoolean">False</sys:Boolean>
    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2" Background="#80000000" CornerRadius="10" Panel.ZIndex="10"
                Visibility="{Binding DebtStore.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TextBlock Text="Yükleniyor..." Foreground="White" FontSize="24"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Column="0" Margin="0,0,20,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <Border Style="{StaticResource DashboardCardStyle}">
                    <StackPanel>
                        <TextBlock Text="Create a New Debt Proposal" Style="{StaticResource CardTitleTextStyle}"/>
                        <Border Style="{StaticResource CardSeparatorStyle}"/>
                        <TextBlock Text="BORROWER'S E-MAIL ADDRESS" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding NewProposalBorrowerEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>
                        <TextBlock Text="DESCRIPTION" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding NewProposalDescription, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" MinHeight="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <TextBlock Text="AMOUNT OF DEBT" Style="{StaticResource LabelTextStyle}"/>
                        <TextBox Style="{StaticResource ModernTextBoxStyle}" Text="{Binding NewProposalAmount, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Margin="0,0,0,15"/>
                        <TextBlock Text="CURRENCY" Style="{StaticResource LabelTextStyle}"/>
                        <ComboBox SelectedIndex="0" Style="{StaticResource ModernComboBoxStyle}" Margin="0,0,0,15"
                            ItemsSource="{Binding CurrencyTypes}" SelectedItem="{Binding NewCurrencyType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="FINAL PAYMENT DATE" Style="{StaticResource LabelTextStyle}"/>
                        <DatePicker SelectedDate="{Binding NewProposalDueDate}" Style="{StaticResource ModernDatePickerStyle}" Margin="0,0,0,25"/>
                        <Button Content="SEND OFFER" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding SendOfferCommand}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource DashboardCardStyle}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Pending Offers" Style="{StaticResource CardTitleTextStyle}"/>
                        <Border Style="{StaticResource CardSeparatorStyle}"/>
                        <ItemsControl ItemsSource="{Binding DebtStore.PendingOffers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:DebtModel}">
                                    <Border Background="{StaticResource CardDarkerBackgroundBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Foreground="White" TextWrapping="Wrap">
                                                <Run Text="{Binding LenderName}" FontWeight="Bold"/>
                                                <Run Text="sent you a debt offer."/>
                                            </TextBlock>
                                            <TextBlock Foreground="{StaticResource TopBarTextSecondaryBrush}" Margin="0,5,0,10">
                                                <Run Text="Amount:"/>
                                                <Run Text="{Binding Amount, StringFormat={}{0:N2} TRY}"/>
                                                <Run Text="| Due:"/>
                                                <Run Text="{Binding DueDate, StringFormat=dd.MM.yyyy}"/>
                                            </TextBlock>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Confirm" Style="{StaticResource SuccessButtonStyle}" Width="80"
                                                        Command="{Binding DataContext.RespondToOfferCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource ObjectArrayConverter}">
                                                            <Binding Path="."/>
                                                            <Binding Source="{StaticResource TrueBoolean}"/>
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                                <Button Content="Reject" Style="{StaticResource DangerButtonStyle}" Width="80" Margin="10,0,0,0"
                                                        Command="{Binding DataContext.RespondToOfferCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                                    <Button.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource ObjectArrayConverter}">
                                                            <Binding Path="."/>
                                                            <Binding Source="{StaticResource FalseBoolean}"/>
                                                        </MultiBinding>
                                                    </Button.CommandParameter>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" Margin="20,0,0,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="All My Debts (Given and Received)" Style="{StaticResource CardTitleTextStyle}"/>
                <Border DockPanel.Dock="Top" Style="{StaticResource CardSeparatorStyle}"/>
                <ListView ItemsSource="{Binding DebtStore.MyDebtsList}"
                          Background="Transparent" BorderThickness="0"
                          ItemContainerStyle="{StaticResource CleanListViewItemStyle}"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:DebtModel}">
                            <ToggleButton IsChecked="{Binding IsExpanded, Mode=TwoWay}" 
                                          Style="{StaticResource ExpandableListItemToggleButtonStyle}">
                                <StackPanel>
                                    <Grid Height="60">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,15,0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding CounterPartyImageUrl}" />
                                            </Border.Background>
                                        </Border>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CounterPartyName}" Foreground="{StaticResource TopBarTextPrimaryBrush}" FontSize="16" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusBrush}" FontSize="12" FontWeight="Normal"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat={}{0:N2} TRY}" Foreground="{StaticResource TopBarTextPrimaryBrush}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0"/>

                                        <Path x:Name="Arrow" Grid.Column="3" Data="M 0 4 L 4 0 L 8 4" Stroke="{StaticResource TopBarTextSecondaryBrush}" StrokeThickness="1.5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <Path.RenderTransform>
                                                <RotateTransform Angle="0" CenterX="4" CenterY="2"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Grid>

                                    <Border x:Name="DetailsPanel" Visibility="Collapsed"
                                            Background="{StaticResource CardDarkerBackgroundBrush}"
                                            Margin="0,10,-15,-15" Padding="15">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <Border Width="35" Height="35" CornerRadius="17.5">
                                                        <Border.Background>
                                                            <ImageBrush ImageSource="{Binding LenderImageUrl}" />
                                                        </Border.Background>
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                                        <TextBlock Text="LENDER" Foreground="Green" FontWeight="Bold"/>
                                                        <TextBlock Style="{StaticResource DetailValueTextStyle}">
                                                            <Run Text="UserName: " FontWeight="Bold"/>
                                                            <Run Text="{Binding LenderName}"/>
                                                        </TextBlock>
                                                        <TextBlock Style="{StaticResource DetailLabelTextStyle}">
                                                            <Run Text="Email: " FontWeight="Bold"/>
                                                            <Run Text="{Binding LenderEmail}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Separator Grid.Column="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="15,0"/>
                                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                    <Border Width="35" Height="35" CornerRadius="17.5">
                                                        <Border.Background>
                                                            <ImageBrush ImageSource="{Binding BorrowerImageUrl}"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                                        <TextBlock Text="BORROWER" Foreground="Red" FontWeight="Bold"/>
                                                        <TextBlock Style="{StaticResource DetailValueTextStyle}">
                                                            <Run Text="UserName: " FontWeight="Bold"/>
                                                            <Run Text="{Binding BorrowerName}"/>
                                                        </TextBlock>
                                                        <TextBlock Style="{StaticResource DetailLabelTextStyle}">
                                                            <Run Text="Email: " FontWeight="Bold"/>
                                                            <Run Text="{Binding BorrowerEmail}" />
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>

                                            <Border Grid.Row="1" Style="{StaticResource DetailSeparatorStyle}"/>
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="DEBT AMOUNT" Style="{StaticResource DetailLabelTextStyle}"/>
                                                    <TextBlock Style="{StaticResource DetailValueTextStyle}" FontSize="16">
                                                        <Run Text="{Binding Amount}"/>
                                                        <Run Text=""/>
                                                        <Run Text="{Binding Currency}" FontSize="10"/>
                                                    </TextBlock>
                                                    <TextBlock Text="DEBT STATUS" Style="{StaticResource DetailLabelTextStyle}" Margin="0,10,0,0"/>
                                                    <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusBrush}" Style="{StaticResource DetailValueTextStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="DEBT DESCRIPTION" Style="{StaticResource DetailLabelTextStyle}"/>
                                                    <TextBlock Text="{Binding Description, FallbackValue='No description provided'}" Style="{StaticResource DetailValueTextStyle}" TextWrapping="Wrap"/>
                                                    <TextBlock Text="DEBT DUE" Style="{StaticResource DetailLabelTextStyle}" Margin="0,10,0,0"/>
                                                    <TextBlock Style="{StaticResource DetailValueTextStyle}">
                                                        <Run Text="{Binding DueDate, StringFormat=D}"/>
                                                        <Run Text="{Binding DaysUntilDue, StringFormat=' ({0} days left)', Mode=OneWay}" Foreground="{StaticResource TopBarTextSecondaryBrush}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>

                                            <Border Grid.Row="3" Style="{StaticResource DetailSeparatorStyle}"/>
                                            <Grid Grid.Row="4" Margin="0,10,0,0">
                                                <StackPanel VerticalAlignment="Bottom" TextBlock.LineHeight="18">
                                                    <TextBlock Text="Approved Date of Borrowing:" Style="{StaticResource DetailLabelTextStyle}"/>
                                                    <TextBlock Text="{Binding AcceptanceDate, StringFormat=g, FallbackValue='N/A'}" Style="{StaticResource DetailValueTextStyle}"/>
                                                    <TextBlock Text="Operator Approved Date:" Style="{StaticResource DetailLabelTextStyle}" />
                                                    <TextBlock Text="{Binding OperatorApprovalDate, StringFormat=g, FallbackValue='N/A'}" Style="{StaticResource DetailValueTextStyle}"/>
                                                    <TextBlock Text="Payment Approval Date:" Style="{StaticResource DetailLabelTextStyle}" />
                                                    <TextBlock Text="{Binding PaymentDate, StringFormat=g, FallbackValue='N/A'}" Style="{StaticResource DetailValueTextStyle}"/>
                                                </StackPanel>

                                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                                    <Button Content="Upload Approval Video" Style="{StaticResource PrimaryButtonStyle}" 
                                                            Visibility="{Binding IsActionRequiredForBorrower, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.UploadVideoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="View Guarantee Video" Style="{StaticResource PrimaryButtonStyle}" Margin="0,5,0,0"
                                                            Visibility="{Binding IsVideoViewableForLender, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.ViewVideoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                    <Button Content="Mark as Defaulted" Style="{StaticResource DangerButtonStyle}" Margin="0,5,0,0"
                                                            Visibility="{Binding CanMarkAsDefaulted, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                            Command="{Binding DataContext.MarkAsDefaultedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ToggleButton>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                    <Setter TargetName="DetailsPanel" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                        <Setter.Value>
                                            <RotateTransform Angle="180" CenterX="4" CenterY="2"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </DataTemplate.Triggers>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
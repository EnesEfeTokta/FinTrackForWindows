<Window x:Class="FinTrackForWindows.Views.KeyEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Enter Encryption Key" 
        Height="300" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="ToolWindow"
        Background="{StaticResource MainBackgroundBrush}">

    <Border Padding="25" CornerRadius="10">
        <StackPanel VerticalAlignment="Center">

            <TextBlock Text="Enter Encryption Key" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Please enter the unique encryption key you received via email to view the guarantee video." 
                       Foreground="{StaticResource TopBarTextSecondaryBrush}" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBox x:Name="KeyTextBox" 
                     Style="{StaticResource ModernTextBoxStyle}" 
                     Margin="0,0,0,25"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Confirm" 
                        IsDefault="True" 
                        Click="Confirm_Click" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Width="120"/>

                <Button Content="Cancel" 
                        IsCancel="True" 
                        Click="Cancel_Click" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="{StaticResource StatusRedBrush}" 
                        Width="120" 
                        Margin="15,0,0,0"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>